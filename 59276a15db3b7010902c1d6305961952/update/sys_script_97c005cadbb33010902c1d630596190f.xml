        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {
    var collectTasks = new GlideRecord('x_425618_valenciad_collection_maintenance');
    collectTasks.addQuery('collection_item', current.collection_item);
    collectTasks.query();

    var newComplete = 0;
    var newTotal = 0;

    while (collectTasks.next()) {
        if (collectTasks.active == false) {
            newComplete++;
        }
        newTotal++;

    }

    var collectItem = new GlideRecord('x_425618_valenciad_collection');
    collectItem.addQuery('sys_id', current.collection_item);
    collectItem.query();

    if (collectItem.next()) {
        collectItem.task_count = newTotal;
        collectItem.completed_task_count = newComplete;
        collectItem.update();
    }
})(current, previous);]]></script>
